mixin product(image, name, desc, button)
    .product
        .product__image-wrapper
            +img("src/blocks/product/assets/img/"+image, "product__image", "Product")
        .product__content
            h4.product__name= name
            p.product__desc= desc
            if button == false
            else
                a(href="#").button.button--gray= button

