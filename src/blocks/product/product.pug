mixin productArrow(image, name, addClass)
    div(class= addClass).product
        .product__image-wrapper
            +img(image, "product__image", "Product")
        .product__image-desc
            a(href="#").product__link
                +mixinSvg("22px", "16px", "arrow-right", "")
                = name