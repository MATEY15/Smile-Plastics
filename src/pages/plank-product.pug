extends ../templates/main

include ../blocks/product/product
include ../blocks/breadcrumbs/breadcrumbs

block variables
    - var title = 'Smile Plastics'

block content
    main.main

        section.section.product-preview.default-offset
            .layout
                .row
                    .col-lg-6.col-md-6
                        .product-preview__image
                            a(href="src/blocks/product-preview/assets/img/samples-page-product1.jpg" data-effect="mfp-zoom-in").product-preview__popup
                                img(src="src/blocks/product-preview/assets/img/samples-page-product1.jpg").mfp-with-anim

                    .col-lg-6.col-md-6
                        .product-preview__info
                            .product-preview__name
                                h3 Planks
                                p Our versatile planks are suitable for all sorts of design projects; not only that, and they make one helluva shelf.  What can you make with these?
                            .product-preview__option
                                .product-preview__items
                                    h4 Choose material:
                                    select.select-main
                                        option Blue Dapple
                                        option Blue Dapple 1
                                        option Blue Dapple 2
                                .product-preview__items
                                    h4 Choose size:
                                    select.select-main
                                        option 1000mm × 2000mm
                                        option 1000mm × 3000mm
                                        option 1000mm × 4000mm
                                .product-preview__items
                                    h4 Choose thickness:
                                    select.select-main
                                        option 12mm
                                        option 14mm
                                        option 16mm
                                .product-preview__button
                                    button.button.button--gray Add to basket — £42

        section.section
            .layout
                .row
                    .col-lg-6.col-md-6
                        .row.example
                            .col-lg-6.col-md-6
                                +productDescMain("src/blocks/alba/assets/img/alba-product2.jpg", "20mm edge", "product--dark")
                            .col-lg-6.col-md-6
                                +productDescMain("src/blocks/alba/assets/img/alba-product3.jpg", "20mm edge", "product--dark")

                    .col-lg-6.col-md-6
                        .content-text.default-offset
                            b Delivery
                            p Our samples take approximately 1-3 weeks to arrive within the UK and 2 weeks outside of the UK.
                            b COVID
                            p Due to COVID safe working practices and increased demand, samples are taking a little longer than usual, please bear with us and we apologise for any inconvenience.
                            p
                            a(href="#").button.button--gray More about Alba

        section.section.section--offset-top.catalog
            .layout
                .row
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product7.jpg", "Grey Mist ")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product8.jpg", "Charcoal")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product9.jpg", "Ocean")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product10.jpg", "Kaleido")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product11.jpg", "Black Dapple")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product12.jpg", "Black Dapple")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product13.jpg", "Limted Edition Coral Dapple")
                    .col-lg-3.col-md-4.col-sm-6
                        +catalogItem("src/blocks/product-preview/assets/img/samples-page-product14.jpg", "Alba")

        section.section
            .layout
                .section__head
                    h3 YOU May LIKE
                .default-offset.row
                    .col-lg-6.col-md-6
                        +productMain("src/blocks/order/assets/img/order-product3.jpg", "", "", "Shop table")
                    .col-lg-6.col-md-6
                        +productMain("src/blocks/product/assets/img/product-image.jpg", "", "", "Shop table")

        include ../blocks/your-design/your-design
        include ../blocks/preview/preview
        include ../blocks/testimonials/testimonials