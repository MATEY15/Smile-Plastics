extends ../templates/main

include ../blocks/product/product
include ../blocks/breadcrumbs/breadcrumbs

block variables
    - var title = 'Smile Plastics'

block content
    main.main

        section.section.product-preview
            .layout
                .row
                    .col-lg-6.col-md-6
                        .product-preview__image
                            a(href="src/blocks/product-preview/assets/img/samples-page-product1.jpg").product-preview__popup
                                img(src="src/blocks/product-preview/assets/img/samples-page-product1.jpg")

                    .col-lg-6.col-md-6
                        .product-preview__info
                            .product-preview__name Alba
                            .product-preview__option
                                .product-preview__items
                                    label Choose size:
                                    select.select-main
                                        option 1000mm × 2000mm
                                        option 1000mm × 3000mm
                                        option 1000mm × 4000mm
                                .product-preview__items
                                    label Choose thickness:
                                    select.select-main
                                        option 12mm
                                        option 14mm
                                        option 16mm
                                .product-preview__button
                                    button.button.button--gray Add to basket — £10




        section.section
            .layout
                .desc-content
                    .row
                        .col-lg-6.col-md-6
                            h3.heading-inside Think recycled plastic is fantastic? Work with us.
                        .col-lg-6.col-md-6
                            .content-text.default-offset
                                p We are a small but growing team of creative people who are passionate about sustainability, innovation, design, and realising the Smile Plastics vision. We will share any job opportunities here, but also feel free to contact us with what you can offer at #[a(href="mailto:hr@smile-plastics.com") hr@smile-plastics.com].

        include ../blocks/your-design/your-design
        include ../blocks/preview/preview
        include ../blocks/testimonials/testimonials